<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feature.favourite.presentation.FavouriteFragment">

    <data>
        <variable
            name="vmFavourite"
            type="com.rizki.alfatest.feature.favourite.presentation.FavouriteViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/ly_review"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:listitem="@layout/item_favourite"/>

        <TextView
            android:id="@+id/tv_no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:text="No Favourite Yet"
            android:textColor="@color/white"
            android:textSize="25sp" />

    </RelativeLayout>

</layout>